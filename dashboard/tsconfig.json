{
  "exclude": [
    "node_modules"
  ],
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "next-env.d.ts",
    ".next/types/**/*.ts", 
    "pages"  
  ]
}
